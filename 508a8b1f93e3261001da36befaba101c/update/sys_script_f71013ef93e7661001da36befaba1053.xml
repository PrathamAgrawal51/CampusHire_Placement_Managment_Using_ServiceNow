        <script><![CDATA[(function executeRule(current, previous) {
  // run only when status changes to Selected
  if (previous.status == current.status) return;
  if (current.status == 'Selected') {
    // create placement result
    var res = new GlideRecord('x_466636_campushir_placement_result');
    res.initialize();
    res.student = current.student;
    res.job = current.job;
    // get job's company if exists
    var jobGR = current.job.getRefRecord();
    if (jobGR && jobGR.posted_by)
      res.company = jobGR.posted_by;
    res.final_status = 'Selected';
    res.insert();
  }
})(current, previous);
]]></script>
