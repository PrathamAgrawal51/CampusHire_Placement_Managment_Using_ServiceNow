        <script><![CDATA[// Server-side UI Action (runs on the server)
(function() {
  // find the student's Student record for current user
  var stuGR = new GlideRecord('x_466636_campushir_student');
  stuGR.addQuery('user', gs.getUserID());
  stuGR.query();
  if (!stuGR.next()) {
    gs.addErrorMessage('No Student profile found for your user. Please create your profile first.');
    action.setRedirectURL(current);
    return;
  }

  // create application
  var appGR = new GlideRecord('x_466636_campushir_application');
  appGR.initialize();
  appGR.job = current.sys_id;
  appGR.student = stuGR.sys_id;
  appGR.date_applied = new GlideDateTime();
  // eligibility will be set by BR (next step)
  var appSys = appGR.insert();

  gs.addInfoMessage('Application submitted.');
  action.setRedirectURL(appGR);
})();
]]></script>
